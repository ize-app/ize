{
  "name": "ize",
  "description": "Monorepo for the Ize app",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "apps/frontend",
    "apps/backend"
  ],
  "engines": {
    "node": ">=20.13.1 <21.0.0"
  },
  "scripts": {
    "start:backend": "npm run start:dev:docker --workspace=apps/backend",
    "build": "npm run build --workspace=apps/frontend && npm run build --workspace=apps/backend",
    "codegen": "graphql-codegen --config codegen.ts && ts-node scripts/ignoreCodegenTSErrors.ts",
    "lint": "eslint . --max-warnings 0 && npm run tsc",
    "format": "prettier . --write",
    "prepare": "husky || true",
    "tsc": "npm run tsc --workspace=apps/frontend  && npm run tsc --workspace=apps/backend"
  },
  "devDependencies": {
    "@eslint/js": "^9.3.0",
    "@graphql-codegen/cli": "^5.0.3",
    "@graphql-codegen/client-preset": "^4.5.1",
    "@graphql-codegen/fragment-matcher": "^5.0.2",
    "@graphql-codegen/introspection": "^4.0.3",
    "@graphql-codegen/typescript": "^4.1.2",
    "@graphql-codegen/typescript-resolvers": "^4.4.1",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.9.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.2",
    "globals": "^15.12.0",
    "husky": "^9.1.7",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
   "typescript-eslint": "^7.11.0"
  },
  "dependencies": {
    "typescript": ">=5.5.0 <5.6.0"
  }
}
