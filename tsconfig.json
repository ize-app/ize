{
  "compilerOptions": {
    "baseUrl": ".",
    "incremental": true,
    "target": "es2022",
    "module": "commonjs",
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,

    /* Linting */
