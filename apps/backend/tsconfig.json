{
  // inherits from parent tsconfig
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ESNext",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "@graphql/*": ["src/graphql/*"],
      "@discord/*": ["src/discord/*"],
      "@services/*": ["src/services/*"]
    },

    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    // "Composite" and "declaration" are necessary so this app can be referenced as a npm package
    "composite": true,
    "declaration": true
  },
  "include": ["src/**/*.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
