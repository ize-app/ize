{
  // inherits from parent tsconfig
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ESNext",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "@/*": ["src/*"],
      "@graphql/*": ["src/graphql/*"],
      "@discord/*": ["src/discord/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"]
    },

    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    // "Composite" and "declaration" are necessary so this app can be referenced as a npm package
    "composite": true,
    "declaration": true,

    // For sentry source map
    "inlineSources": true,
    // Set `sourceRoot` to  "/" to strip the build path prefix in source map for better Sentry error grouping.
    "sourceRoot": "/"
  },
  // "include": ["src/**/*.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
